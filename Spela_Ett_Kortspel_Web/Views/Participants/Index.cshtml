@model GameCreateVM
@{
    ViewBag.Title = "Game Index";
}
    <h3>Create Game</h3>
    <form asp-controller="Participants" asp-action="Index">

        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
        <br />
        <label asp-for="NumberOfOpponents"></label>
        <select asp-for="SelectedNumberOfOpponents"
                asp-items="Model.NumberOfOpponents"></select>
        <span asp-validation-for="SelectedNumberOfOpponents"></span>
        @*@Html.DropDownListFor(x => x.CreateGameForm.SelectedNumberOfOpponents, Model.CreateGameForm.NumberOfOpponents)*@
        <br />

        <input type="Submit" value="Create Game" />
    </form>
@section scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
}






